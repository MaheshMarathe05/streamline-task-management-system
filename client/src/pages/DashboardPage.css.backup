
.dashboard-container {
  width: 100%;
  padding: 0 2.5rem 2.5rem 2.5rem;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f8fafc 0%, #f0f9ff 100%);
  min-height: 100vh;
}

/* --- Header --- */
.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 0;
  margin-bottom: 1.5rem;
}
.header-left { display: flex; align-items: center; gap: 1rem; }
.menu-button { background: none; border: none; color: var(--text-secondary); cursor: pointer; }
.breadcrumbs { color: var(--text-secondary); }
.breadcrumbs span:first-child { color: var(--text-primary); font-weight: 500; }
.header-right { display: flex; align-items: center; gap: 1.5rem; }
.header-link { color: var(--text-secondary); text-decoration: none; font-size: 0.9rem; font-weight: 500; }
.header-link.pricing { color: var(--accent-secondary); }

/* --- Main Grid Layout --- */
.dashboard-content-wrapper {
  display: contents;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: 2.5fr 1fr;
  gap: 2rem;
  height: calc(100vh - 150px);
}

/* --- Backup Codes Warning --- */
.backup-codes-warning {
  grid-column: 1 / -1;
  margin-bottom: 1rem;
}

.warning-content {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: linear-gradient(135deg, rgba(251, 191, 36, 0.1) 0%, rgba(245, 158, 11, 0.1) 100%);
  border: 1px solid rgba(251, 191, 36, 0.3);
  border-radius: 8px;
  padding: 1rem 1.5rem;
  color: var(--text-primary);
}

.warning-icon {
  font-size: 1.2rem;
  flex-shrink: 0;
}

.warning-text {
  flex-grow: 1;
  font-size: 0.9rem;
}

.warning-action {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: #1f2937;
  border: none;
  border-radius: 6px;
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.warning-action:hover {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  transform: translateY(-1px);
}

.warning-dismiss {
  background: none;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  font-size: 1.2rem;
  padding: 0.25rem;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.warning-dismiss:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.dashboard-main {
  display: flex;
  flex-direction: column;
}
.main-title {
  font-size: 2rem;
  font-weight: 700;
  margin: 0 0 2rem 0;
}

.dashboard-task-preview {
  background: linear-gradient(135deg, #ffffff 0%, #fafbff 100%);
  border-radius: 20px;
  padding: 2.5rem;
  border: 1px solid rgba(148, 163, 184, 0.15);
  box-shadow: var(--shadow-colorful);
}

.task-board-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.task-board-header h2 {
  margin: 0;
  font-size: 1.25rem;
  color: var(--text-primary);
}

.view-all-btn {
  background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
  color: white;
  border: none;
  border-radius: 12px;
  padding: 0.875rem 1.75rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-md);
}

.view-all-btn:hover {
  background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 8px 20px rgba(14, 165, 233, 0.4);
}

.mini-kanban {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.mini-column {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  padding: 2rem 1.5rem;
  border-radius: 16px;
  text-align: center;
  border: 2px solid rgba(148, 163, 184, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
}

.mini-column:hover {
  border-color: rgba(14, 165, 233, 0.5);
  transform: translateY(-6px);
  box-shadow: var(--shadow-lg);
}

.mini-column.completed {
  border-color: rgba(34, 197, 94, 0.5);
  background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
}

.mini-column.completed:hover {
  box-shadow: 0 8px 20px rgba(34, 197, 94, 0.2);
}

.mini-column h3 {
  margin: 0 0 1rem 0;
  font-size: 0.95rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  font-weight: 600;
}

.task-count {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(135deg, #0ea5e9 0%, #a855f7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.5rem;
}

.mini-column.completed .task-count {
  background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.column-desc {
  margin: 0;
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.action-card {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
  border: none;
  border-radius: 16px;
  padding: 1.75rem;
  color: white;
  font-weight: 700;
  font-size: 1.05rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-md);
}

.action-card:nth-child(1) {
  background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
}

.action-card:nth-child(2) {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.action-card:nth-child(3) {
  background: linear-gradient(135deg, #14b8a6 0%, #0d9488 100%);
}

.action-card:nth-child(4) {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
}

.action-card:hover {
  transform: translateY(-4px) scale(1.03);
  box-shadow: 0 12px 28px rgba(168, 85, 247, 0.4);
}

.action-card:nth-child(1):hover {
  box-shadow: 0 12px 28px rgba(14, 165, 233, 0.4);
}

.action-card:nth-child(2):hover {
  box-shadow: 0 12px 28px rgba(249, 115, 22, 0.4);
}

.action-card:nth-child(3):hover {
  box-shadow: 0 12px 28px rgba(20, 184, 166, 0.4);
}

.action-card:nth-child(4):hover {
  box-shadow: 0 12px 28px rgba(236, 72, 153, 0.4);
}

.kanban-placeholder {
  flex-grow: 1;
  background-color: var(--bg-secondary);
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: var(--text-secondary);
  border: 1px dashed var(--border-color);
}
.kanban-placeholder p {
    margin-bottom: 1rem;
}

/* --- Right Sidebar --- */
.dashboard-sidebar {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  overflow-y: auto;
}

.widget {
  background: linear-gradient(135deg, #ffffff 0%, #fafbff 100%);
  border-radius: 20px;
  padding: 2rem;
  border: 1px solid rgba(148, 163, 184, 0.15);
  box-shadow: var(--shadow-colorful);
  transition: all 0.3s;
}

.widget:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
}
.widget-title {
  margin: 0 0 1rem;
  font-size: 1rem;
  font-weight: 600;
  color: var(--text-secondary);
}

.user-profile {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.profile-info { display: flex; flex-direction: column; }
.profile-name { font-weight: 600; color: var(--text-primary); }
.profile-role { font-size: 0.8rem; color: var(--text-secondary); }
.profile-avatar-wrapper { position: relative; }
.profile-avatar {
  width: 56px; height: 56px; border-radius: 50%;
  background: linear-gradient(135deg, #0ea5e9 0%, #a855f7 100%);
  display: flex; align-items: center; justify-content: center;
  font-size: 1.75rem; font-weight: 700;
  color: white;
  border: 3px solid white;
  box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
}

.chart-container { height: 150px; }

.efficiency-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
  justify-items: center;
}
.efficiency-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pie-chart-wrapper { position: relative; width: 70px; height: 70px; }
.efficiency-value {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  font-size: 1.1rem;
  font-weight: 600;
}
.efficiency-author {
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-top: 0.5rem;
}

.schedule-list {
  list-style: none; padding: 0; margin: 0;
  display: flex; flex-direction: column; gap: 1rem;
}
.schedule-list li {
  display: flex; justify-content: space-between;
  font-size: 0.9rem;
  padding-left: 1rem;
  border-left: 2px solid var(--accent-secondary);
}
.schedule-time { color: var(--text-secondary); }
.schedule-task { color: var(--text-primary); font-weight: 500; }